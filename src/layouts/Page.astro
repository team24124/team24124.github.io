---
import Footer from "../components/Footer.astro"
import Header from "../components/Header.astro"
import Banner from "../components/Banner.astro"

import '../styles/style.css'

const { title } = Astro.props
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/png" href="src/assets/favicon.png" />
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=keyboard_arrow_down" />
        <meta property="og:title" content=`Nighthawks Robotics - ${title}` />
        <meta property="og:url" content="https://team24124.github.io" />
        <meta property="og:image" content="src/assets/roboticslogo-iconcolored.png" />
		<meta name="viewport" content="width=device-width" />
		<title>Nighthawks Robotics - { title }</title>
	</head>
	<body>
		<Banner />
		<section class="container" id="main">
			<Header />
			<slot />
			<Footer />
		</section>
		
	</body>
</html>
