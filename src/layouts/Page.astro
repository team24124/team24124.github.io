---
import Footer from "../components/Footer.astro"
import Header from "../components/Header.astro"
import Banner from "../components/Banner.astro"


import '../styles/style.css'

const { title } = Astro.props
---

<html lang="en">
	<head>
		<meta charset="utf-8" />

		<!-- Google tag (gtag.js) for Analytics -->
		<script type="text/partytown" async src="https://www.googletagmanager.com/gtag/js?id=G-WWLYK1VVRL"></script>
		<script type="text/partytown">
		  window.dataLayer = window.dataLayer || [];
		  function gtag(){dataLayer.push(arguments);}
		  gtag('js', new Date());
		  gtag('config', 'TAG_ID');
		</script>

		<link rel="icon" type="image/png" href="/favicon.png" />
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=keyboard_arrow_down" />

		<!-- Open Graph Tags -->
        <meta property="og:title" content=`Nighthawks Robotics - ${title}` />
		<meta property="og:type" content="website" />
        <meta property="og:url" content="https://team24124.github.io" />
		<meta property="og:description" content="Home of Team 24124, Nighthawks Robotics!" />
        <meta property="og:image" content="/og-image.png" />

		<meta name="viewport" content="width=device-width" />
		<title>Nighthawks Robotics - { title }</title>
	</head>
	<body>
		<Banner />
		<section class="container" id="main">
			<Header />
			<slot />
			<Footer />
		</section>
		
	</body>
</html>
